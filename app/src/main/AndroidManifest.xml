            android:name=".MemoryLeakTestActivity"
            android:label="Memory Leak Test Activity" />
        <activity
            android:name=".RoundedRectangleOverlayActivity"
            android:label="Rounded Rectangle Activity" />
        <activity
            android:name=".AdjustPaddingOverlayActivity"
            android:label="Adjust Overlay Padding Activity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".RecyclerViewActivity"
            android:label="RecyclerView Activity" />
        <activity
            android:name=".MainActivity"
            android:label="Tour Guide Demo">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Test Activity -->
        <activity
            android:name=".ToolTipMeasureTestActivity"
            android:exported="true"
            android:label="ToolTip Measure Test Activity" />

    </application>

</manifest>