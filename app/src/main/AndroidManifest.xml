<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.brainbook.android.tourguide.app">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ToolbarActivity"
            android:label="Toolbar Activity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".BasicActivity"
            android:label="Basic Activity" />
        <activity
            android:name=".ToolTipGravityActivity"
            android:label="Tooltip Gravity Activity" />
        <activity
            android:name=".ToolTipCustomizationActivity"
            android:label="ToolTip Customization Activity" />
        <activity
            android:name=".OverlayCustomizationActivity"
            android:label="Overlay Customization Activity" />
        <activity
            android:name=".MultipleToolTipActivity"
            android:label="Multiple Tooltip Activity" />
        <activity
            android:name=".NoPointerActivity"
            android:label="NoPointer Activity" />
        <activity
            android:name=".NoPointerNoToolTipActivity"
            android:label="Overlay Only Activity" />
        <activity
            android:name=".NoOverlayActivity"
            android:label="No Overlay Activity" />
